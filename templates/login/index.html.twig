{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}

	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="d-flex justify-content-center mt-4">
		<form class="d-flex flex-column justify-content-center ms-5" action="{{ path('app_login') }}" method="post">
			<div class="d-flex justify-content-center flex-column">
				<label class="h3" username"">Email:</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}">
			</div>
			<div class="d-flex justify-content-center flex-column mt-3">
				<label class="h3" for="password">Password:</label>
				<input type="password" id="password" name="_password">
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<input type="hidden" name="_target_path" value="/login/redirect">
			<button class="mt-3 mb-4" type=" submit">login</button>
		</div>

	</form>
{% endblock %}
