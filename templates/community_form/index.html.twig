{% extends 'base.html.twig' %}

{% block title %}Complete your Community Informations
{% endblock %}

{% block body %}
	<h1>Complete your Community Informations</h1>
	<div class="d-flex justify-content-center">
		{{ form_start(form, {'attr': {'class': 'd-flex flex-column h3'}}) }}
		{{ form_row(form.name, {'attr': {'class': 'd-flex flex-column mb-3'}}) }}
		{{ form_row(form.city, {'attr': {'class': 'd-flex flex-column mb-3'}}) }}
		{{ form_row(form.postalCode, {'attr': {'class': 'd-flex flex-column mb-3'}}) }}

		{{ form_widget(form) }}

		<button class="d-flex justify-content-center" type="submit">Send</button>
	</div>
	{{ form_end(form) }}
{% endblock %}
